{
  "name": "Python DevContainer",
  "dockerFile": "Dockerfile",
  "workspaceFolder": "/workspaces",
  "containerEnv": {
    "TZ": "America/Toronto",
    "PIP_ROOT_USER_ACTION": "ignore"
  },
  "customizations": {
    "vscode": {
      "openFiles": ["README.md"],
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.pylint",
        "EditorConfig.EditorConfig",
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode",
        "christian-kohler.path-intellisense",
        "njpwerner.autodocstring",
        "dbaeumer.vscode-eslint",
        "christian-kohler.npm-intellisense",
        "tamasfe.even-better-toml",
        "donjayamanne.python-environment-manager",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        "vsls-contrib.codetour",
        "streetsidesoftware.code-spell-checker",
        "streetsidesoftware.code-spell-checker-french",
        "yzhang.markdown-all-in-one",
        "DavidAnson.vscode-markdownlint",
        "bierner.markdown-preview-github-styles",
        "bierner.markdown-emoji",
        "darkriszty.markdown-table-prettify",
        "jebbs.markdown-extended",
        "aaron-bond.better-comments",
        "wayou.vscode-todo-highlight",
        "hediet.vscode-drawio",
        "humao.rest-client",
        "ms-vsliveshare.vsliveshare",
        "Davidsekar.redis-xplorer",
        "github.vscode-github-actions"
      ]
    },
    "settings": {
      "python.pythonPath": "/usr/local/bin/python",
      "python.languageServer": "Pylance",
      "python.linting.enabled": true,
      "python.linting.pylintEnabled": true,
      "cSpell.language": "fr,en",
      "python.linting.flake8Enabled": true
    }
  },
  "postCreateCommand": "export PROJECT_NAME=$(basename $(find . -maxdepth 1 -type d ! -name '.*')) && pip install -r /workspaces/$PROJECT_NAME/requirements.txt",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "node",
      "nodeGypDependencies": false
    }
  },
  // Comment out connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
  // Using vscode is not compatible with this setup as /workspaces/ is with root:root owner
  // "remoteUser": "vscode"
  "remoteUser": "root"
}
